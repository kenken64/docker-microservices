FROM node:12-alpine

WORKDIR backend-svr

COPY ./package.json ./

RUN npm install

COPY ./ ./

ENV PORT 8080
ENV MYSQL_SERVER localhost
ENV MYSQL_USERNAME root
ENV MYSQL_PORT 33060
ENV MYSQL_PASSWORD root1234
ENV MYSQL_DATABASE testdb
ENV MYSQL_MAX_IDLE_TIME 500
ENV MYSQL_CONNECTION 25
ENV MYSQL_Q_TIMEOUT 500

EXPOSE 8080:8080

CMD [ "node", "server.js" ]


