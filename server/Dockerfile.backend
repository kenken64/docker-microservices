FROM node:12-alpine

WORKDIR backend-svr

COPY ./package.json ./

RUN npm install

COPY ./ ./

ENV PORT 8080
ENV MYSQL_SERVER 172.17.0.3
ENV MYSQL_PORT 3306
ENV MYSQL_USERNAME root
ENV MYSQL_PASSWORD root1234
ENV MYSQL_DATABASE testdb
ENV MYSQL_CONNECTION 10

EXPOSE 8080:8080

CMD [ "node", "server.js" ]


